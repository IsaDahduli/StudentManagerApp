<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".StudentMain_Activity"
        android:background="#def1fa">

    <ScrollView android:id="@+id/ScrollView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation = "vertical">

            <TextView
                    android:text="Choose an Option: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/button_view_all_courses"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#4f87ff"
                    android:text="View All Courses"
                    android:onClick="goToViewAllCourses"
                    android:textColor="#ffffff" />

            <Button
                    android:id="@+id/button_go_to_course_add"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#4f87ff"
                    android:onClick="goToAddCourse"
                    android:text="Add Course"
                    android:textColor="#ffffff" />

            <Button
                    android:id="@+id/button_course_delete"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#4f87ff"
                    android:text="Remove Course"
                    android:textColor="#ffffff" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>