<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainMenuActivity"
        android:background="#def1fa">

    <ScrollView android:id="@+id/ScrollView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation = "vertical"
                android:layout_gravity="center">

            <Button
                    android:id="@+id/button_login_teacher"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#4f87ff"
                    android:onClick="goToTeacherLogin"
                    android:text="Login as Teacher"
                    android:textColor="#ffffff"/>

            <Button
                    android:id="@+id/button_login_student"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="goToStudentLogin"
                    android:background="#4f87ff"
                    android:text="Login as Student"
                    android:textColor="#ffffff"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>