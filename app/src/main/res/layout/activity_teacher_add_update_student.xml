<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TeacherAddUpdateStudent"
        android:orientation="vertical"
        android:background="#def1fa">

    <ScrollView android:id="@+id/ScrollView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation = "vertical"
                android:layout_gravity="center">

            <TextView
                    android:text="Enter First Name: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/edit_text_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add a first name"
                    android:maxLines="1"
                    android:singleLine="true"/>

            <TextView
                    android:text="Enter Last Name: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/edit_text_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add Last Name"
                    android:maxLines="1"
                    android:singleLine="true"/>

            <TextView
                    android:text="Enter Student's Phone Number: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/edit_text_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Add Phone Number"
                    android:maxLines="1"
                    android:singleLine="true"/>

            <TextView
                    android:text="Enter Student Password: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/edit_text_student_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:maxLines="1"
                    android:singleLine="true"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/text_view_is_currently_studying"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance Status"
                        android:fontFamily="sans-serif"
                        android:paddingRight="25dp" />

                <RadioGroup
                        android:id="@+id/radio_attending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="25dp">

                    <RadioButton
                            android:id="@+id/radio_true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attending"
                            android:checked="true"/>

                    <RadioButton
                            android:id="@+id/radio_false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not Attending" />

                </RadioGroup>

            </LinearLayout>

            <TextView
                    android:text="Enter Enrolment Date: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5px">

                <EditText
                        android:id="@+id/edit_text_enrolment_date"
                        android:hint="Date"
                        android:layout_width="wrap_content"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="left" />
                <ImageView
                        android:id="@+id/image_view_date"
                        android:src="@android:drawable/ic_menu_today"
                        android:layout_weight="5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                    android:text="Choose Study: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"/>

            <Spinner
                    android:id="@+id/spinner_studies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:drawSelectorOnTop="true"
                    android:layout_marginTop="5dp"/>

            <EditText
                    android:id="@+id/edit_text_study"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Specialization"
                    android:focusable="false"
                    android:maxLines="1"
                    android:singleLine="true"/>

            <Button
                    android:id="@+id/button_add_update_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Student"
                    android:padding="20dp"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:background="#4f87ff"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>